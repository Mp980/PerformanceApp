<PopupContent@Popup>:
    auto_dismiss: False
    size_hint: (None,None)
    width: 350
    height: 400

    FloatLayout:
        Label:
            text: "Are you sure you want ot delete this note?"
            size_hint: 0.6,0.2
            pos_hint: {"x": 0.2, "top":1}

        Label:
            text: "Note cannot be recovered once deleted"
            size_hint: 0.6,0.2
            pos_hint: {"x": 0.2, "top":0.75}

        Button:
            text: "Yes"
            size_hint: 0.4,0.2
            pos_hint: {"x":0.1, "y":0.1}
            on_press:
                Factory.Plan.delete(Factory.Plan)
                root.dismiss()

        Button
            text: "No"
            size_hint: 0.4,0.2
            pos_hint: {"x": 0.5, "y":0.1}
            on_press:
                root.dismiss()





